{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frappe (VM Debug)",
      "type": "debugpy",
      "request": "launch",
      "python": "${workspaceFolder}/../../env/bin/python3",
      "program": "${workspaceFolder}/../../apps/frappe/frappe/utils/bench_helper.py",
      "args": [
        "frappe",
        "serve",
        "--port",
        "${input:frappePort}",
        "--noreload"
      ],
      "cwd": "${workspaceFolder}/../../sites",
      "env": {
        "PYTHONUNBUFFERED": "1",
        "DEVSERVER": "1"
      },
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ],
  "inputs": [
    {
      "id": "frappePort",
      "type": "promptString",
      "description": "Port to run frappe dev server on",
      "default": "8000"
    }
  ]
}
